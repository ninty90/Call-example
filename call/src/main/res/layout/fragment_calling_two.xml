<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#1D1F23">
    <LinearLayout
        android:id="@+id/calling_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">
        <tw.com.chainsea.call.widget.SquareImage
            android:id="@+id/calling_mute"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/mute_n"/>
        <ImageView
            android:id="@+id/calling_hang_up"
            android:src="@drawable/hang_up"
            android:scaleType="center"
            android:background="@drawable/hang_up_bg"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"/>
        <tw.com.chainsea.call.widget.SquareImage
            android:id="@+id/calling_speaker"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"
            android:src="@drawable/speaker_n"/>
    </LinearLayout>

    <GridView
        android:id="@+id/calling_dialer"
        android:layout_above="@id/calling_bottom_layout"
        android:listSelector="@drawable/digit_bg"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:horizontalSpacing="35dp"
        android:numColumns="3"/>
    <TextView
        android:id="@+id/calling_input"
        android:layout_above="@id/calling_dialer"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/calling_title"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:text="客服名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/calling_time"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            tools:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>